<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--메인 하단바 커뮤니티, 지도, 설정-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--메인 검색창-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="환경구조"
                android:textColor="#007521"
                android:textStyle="bold"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/main3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:backgroundTint="#fff"
                android:scaleType="fitCenter"
                android:src="@drawable/main3" />
        </LinearLayout>

        <!--캠페인 배너..둥글게도 만들었음 ㅡㅡ 힘들었음-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_gravity="center"
                    android:src="@drawable/banner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:background="@drawable/main_category_shdow"
            android:orientation="vertical">
            <!--메인 카테고리별 분리배출 이미지 버튼 첫째줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/main1_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_1" />

                <ImageButton
                    android:id="@+id/main1_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_2" />

                <ImageButton
                    android:id="@+id/main1_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_3" />

                <ImageButton
                    android:id="@+id/main1_4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_4" />
            </LinearLayout>


            <!--메인 카테고리별 분리배출 이미지 버튼 둘째줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/main1_5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"

                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_5" />

                <ImageButton
                    android:id="@+id/main1_6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"

                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_6" />

                <ImageButton
                    android:id="@+id/main1_7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"

                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_7" />

                <ImageButton
                    android:id="@+id/main1_8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"

                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_8" />
            </LinearLayout>

            <!--메인 카테고리별 분리배출 이미지 버튼 셋째줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <ImageButton
                    android:id="@+id/main1_9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"

                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_9" />

                <ImageButton
                    android:id="@+id/main1_10"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"

                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_10" />

                <ImageButton
                    android:id="@+id/main1_11"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main1_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ABE6AC"
        android:gravity="center">
        <ImageButton
            android:id="@+id/main2_1"
            android:src="@drawable/main2_1"
            android:layout_margin="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFFFFF"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageButton
            android:id="@+id/main2_2"
            android:src="@drawable/main2_2"
            android:layout_margin="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFFFFF"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <ImageButton
            android:id="@+id/main2_3"
            android:src="@drawable/main2_3"
            android:layout_margin="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFFFFF"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageButton
            android:id="@+id/main2_4"
            android:src="@drawable/main2_4"
            android:layout_margin="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#FFFFFF"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>
