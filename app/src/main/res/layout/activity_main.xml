            android:scaleType="fitCenter"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:backgroundTint="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!--메인 카테고리별 분리배출 이미지 버튼 둘째줄-->
