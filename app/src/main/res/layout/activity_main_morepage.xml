<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityMorepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/xicon"
            />
        <View
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#A8C8A8"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E6F2EC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/inmypage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#fff" >

                <ImageView
                    android:id="@+id/userimg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/user"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="20dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@id/usermsg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toEndOf="@id/userimg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.35" />

                <TextView
                    android:id="@+id/usermsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="한마디"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.012"
                    app:layout_constraintStart_toEndOf="@id/userimg"
                    app:layout_constraintTop_toBottomOf="@id/username"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/usermore"
                    android:background="@drawable/inicon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.88"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="390dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#A8C8A8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1" />



            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘 쓰레기 버리는 날입니다! 버리셨나요??"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <GridLayout
                android:background="#E7F3ED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:columnCount="2"
                android:rowCount="7"
                >
                <TextView
                    android:layout_rowSpan="4"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="0.1"
                    android:text="커뮤니티"
                    android:gravity="top|center"
                    android:padding="15dp"
                    android:textSize="24dp"
                    android:background="@drawable/more_community_bg"
                    />


                <Button
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/more_button_bg"
                    android:drawableEnd="@drawable/doublearrowxml"
                    android:text="공지사항"/>

                <Button
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:text="내가 쓴 글 보러가기"
                    android:background="@drawable/more_button_bg"
                    android:drawableEnd="@drawable/doublearrowxml"
                    />

                <Button
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:text="내 채팅"
                    android:background="@drawable/more_button_bg"
                    android:drawableEnd="@drawable/doublearrowxml"
                    />

                <Button
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:text="좋아요한 글 보러가기"
                    android:background="@drawable/more_button_bg"
                    android:drawableEnd="@drawable/doublearrowxml"
                    />


                <TextView
                    android:layout_rowSpan="2"
                    android:layout_rowWeight="1"
                    android:padding="15dp"
                    android:layout_columnWeight="0.1"
                    android:gravity="top|center"
                    android:textSize="24dp"
                    android:text="지도"
                    android:background="@drawable/more_map_bg"/>

                <Button
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:text="지도"
                    android:background="@drawable/more_button_bg"
                    android:drawableEnd="@drawable/doublearrowxml"
                    />

                <Button
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:text="내 주변 의료수거함 보기"
                    android:background="@drawable/more_button_bg"
                    android:drawableEnd="@drawable/doublearrowxml"
                    />


            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
